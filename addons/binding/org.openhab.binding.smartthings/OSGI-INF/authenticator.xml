<scr:component xmlns:scr="http://www.osgi.org/xmlns/scr/v1.1.0"
	activate="activate" deactivate="deactivate" immediate="true" name="binding.smartthings.authenticator">
	
	<implementation class="org.openhab.binding.smartthings.internal.auth.SmartThingsAuthenticator" />

	<property name="osgi.command.scope" type="String" value="smartthings" />
	<property name="osgi.command.function">
		startAuthentication
		finishAuthentication
	</property>

	<service>
		<provide interface="org.osgi.service.cm.ManagedService"/>
	</service>
	
	<property name="service.pid" type="String" value="smartthings-oauth"/>

</scr:component>
